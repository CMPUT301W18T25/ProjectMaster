<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="297dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="@dimen/place_autocomplete_progress_size"
            app:contentPadding="@dimen/place_autocomplete_prediction_secondary_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/requester_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="8sp" />

                <Button
                    android:id="@+id/requester_button"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_weight="1"
                    android:background="@color/blue3"
                    android:fontFamily="serif"
                    android:text="Requester"
                    android:textStyle="bold|italic" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="305dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="@dimen/place_autocomplete_progress_size"
            app:contentPadding="@dimen/place_autocomplete_prediction_secondary_text">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     " />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="127dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/provider_icon" />

                </LinearLayout>

                <Button
                    android:id="@+id/provider_button"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_weight="1"
                    android:background="@color/blue8"
                    android:fontFamily="serif"
                    android:text="provider"
                    android:textSize="14sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>